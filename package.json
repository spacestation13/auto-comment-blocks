{
    "name": "auto-comment-blocks-dm",
    "displayName": "Auto Comment Blocks (DM support)",
    "description": "Provides block comment completion for Javadoc-style multi-line comments and single-line comment blocks for DM.",
    "version": "2.0.0",
    "publisher": "ss13",
    "homepage": "https://github.com/spacestation13/auto-comment-blocks",
    "repository": {
        "type": "git",
        "url": "https://github.com/spacestation13/auto-comment-blocks.git"
    },
    "license": "MIT",
    "icon": "img/icon.png",
    "galleryBanner": {
        "color": "#171A29",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "keywords": [
        "auto",
        "comment",
        "dm",
        "byond"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:auto-comment-blocks-dm.singleLineBlock"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "Auto Comment Blocks",
            "properties": {
                "auto-comment-blocks-dm.singleLineBlockOnEnter": {
                    "type": "boolean",
                    "default": false,
                    "description": "If enabled, a new commented line is inserted when Enter is pressed, and comment blocks are broken by pressing Shift+Enter. If disabled (the default), a commented line is inserted when Shift+Enter is pressed, and comment blocks are broken by pressing Enter."
                },
                "auto-comment-blocks-dm.disabledLanguages": {
                    "type": "array",
                    "default": [],
                    "description": "Add languageIds here to disable any comment completion for that language."
                },
                "auto-comment-blocks-dm.slashStyleBlocks": {
                    "type": "array",
                    "default": [],
                    "description": "Add languageIds here to enable '//' and '///'-style single line comment blocks for that language. This allows unsupported languages to have comment completion."
                }
            }
        },
        "languages": [
            {
                "id": "dm",
                "configuration": "./language-configuration/language-configuration.dm.json",
                "extensions": [
                    ".dm",
                    ".dme"
                ]
            }
        ],
        "keybindings": [
            {
                "command": "auto-comment-blocks-dm.singleLineBlock",
                "key": "shift+enter",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.48",
        "@types/node": "^20",
        "@types/vscode": "^1.90.0",
        "mocha": "^2.3.3",
        "typescript": "^5.9"
    }
}
